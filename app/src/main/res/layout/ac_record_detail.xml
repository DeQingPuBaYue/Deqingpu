<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bayue.live.deqingpu.view.TopActionBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canClose="true"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/txtMyBlance"
        android:text="@string/app_name"
        style="@style/normalSizeBlackStyle"
        android:textSize="30sp"
        android:gravity="left"
        android:padding="@dimen/dp_30"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/txt_order_id"
                android:padding="@dimen/dp_10"
                style="@style/BaseFont"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtPouchOrderId"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/app_name"
                android:padding="@dimen/dp_10"
                style="@style/BaseFont"
                android:textColor="@color/grey"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/txt_payment_detail"
                style="@style/BaseFont"
                android:textColor="@color/black"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                />
            <TextView
                android:id="@+id/txtPouchPaymentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/app_name"
                android:gravity="right"
                style="@style/normalSizeGreyStyle"
                android:lines="2"/>
            <View
                android:layout_width="300dp"
                android:layout_height="1dp" android:background="@color/color_line" />
            <TextView
                android:id="@+id/txtPouchPayMethod"
                android:text="@string/app_name"
                style="@style/BaseFont"
                android:textColor="@color/black"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>