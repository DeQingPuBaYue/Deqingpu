<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.bayue.live.deqingpu.view.TopActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:canClose="true"

        ></com.bayue.live.deqingpu.view.TopActionBar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="19px"
        android:background="#09323232"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="32px"
        android:paddingLeft="32px">
        <RelativeLayout android:id="@+id/rl_yinliang_confirm"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:paddingLeft="32px"
            android:paddingRight="32px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星级评价："
                android:textColor="@color/black"
                android:textSize="27px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <RatingBar
                android:id="@+id/rateComment"
                style="@style/roomRatingBar"
                android:isIndicator="false"
                android:padding="0.3px"
                android:layout_centerVertical="true"
                android:layout_margin="0px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#09323232"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="31px"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:hint="宝贝满足你的期待吗？说说它的优点和美中不足的地方吧"
            android:textSize="27px"
            android:maxLength="200"
            android:textColor="@color/black"
            android:gravity="start"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最多200字"
            android:textColor="@color/zilanmu_textcolor"
            android:textSize="28px"
            android:layout_gravity="right"/>
    </LinearLayout>
    <ImageView
        android:layout_width="161px"
        android:layout_height="161px"
        android:src="@drawable/icon_59"
        android:layout_marginLeft="32px"
        android:layout_marginTop="32px"/>


</LinearLayout>