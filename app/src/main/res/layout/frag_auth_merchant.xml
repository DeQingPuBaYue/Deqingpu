<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/color_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/frag_auth_common" />
            <TextView
                style="@style/normalSizeBlackStyle"
                android:gravity="left"
                android:text="@string/tip_store_type"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/linStoreType"
                android:background="@drawable/boder"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/txtStoreType"
                    style="@style/normalSizeGreyStyle"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/icon_58"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include android:id="@+id/linAuthPhoto" layout="@layout/frag_auth_common_photo" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />
            <include layout="@layout/common_btn" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>