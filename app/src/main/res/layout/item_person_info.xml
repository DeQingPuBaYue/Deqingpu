<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:showDividers="middle|end"
        android:divider="@drawable/divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_person_signature"
                style="@style/personGreyFont"/>
            <TextView
                android:id="@+id/tvPersonSignature"
                android:text="@string/app_name"
                android:layout_weight="1"
                style="@style/personBlackFont"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_person_birth"
                style="@style/personGreyFont"/>
            <TextView
                android:id="@+id/tvPersonBirth"
                android:text="@string/app_name"
                android:layout_weight="1"
                style="@style/personBlackFont"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_person_constellation"
                style="@style/personGreyFont"/>
            <TextView
                android:id="@+id/tvPersonConstellation"
                android:text="@string/app_name"
                android:layout_weight="1"
                style="@style/personBlackFont"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_person_ID"
                style="@style/personGreyFont"/>
            <ImageView
                android:id="@+id/ivPersonIdMerchant"
                android:src="@mipmap/icon_id_merchant_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/ivPersonIdAnchor"
                android:src="@mipmap/icon_id_anchor_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/ivPersonIdPatron"
                android:src="@mipmap/icon_id_patron_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/ivPersonIdBigShot"
                android:src="@mipmap/icon_id_bigshot_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linPersonReputation"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_person_reputation"
                style="@style/personGreyFont"/>
            <ImageView
                android:id="@+id/ivPersonIdReal"
                android:src="@mipmap/icon_id_real_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/ivPersonIdEnterprise"
                android:src="@mipmap/icon_id_enterprise_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/ivPersonIdService"
                android:src="@mipmap/icon_id_service_auth"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />
            <ImageView
                android:src="@mipmap/icon_jump_light"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>