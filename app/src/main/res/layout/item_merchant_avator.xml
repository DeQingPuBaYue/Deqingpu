<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/dp_8" android:background="@color/white"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgMerchantShopAvator"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtMerchantAvatorShop"
            style="@style/normalSizeBlackStyle"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtMerchantAvatorBusi"
            android:layout_marginTop="@dimen/dp_8"
            style="@style/normalSizeBlackStyle"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="35dp" android:background="@color/color_line" />
    <LinearLayout
        android:id="@+id/linMerchantGoods"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_width="156dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtMerchantGoodsCount"
            android:text="@string/app_name"
            style="@style/normalSizeBlackStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_45"
            android:src="@mipmap/icon_jump"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>