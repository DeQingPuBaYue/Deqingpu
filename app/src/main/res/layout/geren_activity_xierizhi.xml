<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/geren_include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="455px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234px"
            android:padding="20px">
            <EditText android:id="@+id/ed_shuoshuo_xie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:background="@color/transparent"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_tupian_xie"
            android:layout_width="161px"
            android:layout_height="161px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="60px"
            android:layout_marginBottom="60px"
            android:src="@drawable/icon_59"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#09323232"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="13px"
        android:background="#09323232"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout android:id="@+id/rl_gongkai_xie"
            android:layout_width="match_parent"
            android:layout_height="89px"

            android:paddingLeft="32px"
            android:paddingRight="32px">
            <ImageView android:id="@+id/iv_gr_hebao"
                android:layout_width="35px"
                android:layout_height="36px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_119"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67px"
                android:layout_marginLeft="34px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_gr_hebao">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公开"
                    android:layout_centerVertical="true"
                    android:textColor="@color/zilanmu_textcolor"
                    android:textSize="28px"
                    android:layout_alignParentLeft="true"/>
                <ImageView android:id="@+id/iv_gongkai_xie"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@drawable/icon_39"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:background="#22323232"/>

        <RelativeLayout android:id="@+id/rl_bukejian_xie"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:paddingLeft="32px"
            android:paddingRight="32px">

            <ImageView
                android:id="@+id/iv_gr_dizhi"
                android:layout_width="35px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_120" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34px"
                android:layout_toRightOf="@+id/iv_gr_dizhi">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="仅自己可见"
                    android:textColor="@color/zilanmu_textcolor"
                    android:textSize="28px" />

                <ImageView android:id="@+id/iv_bukejian_xie"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@drawable/icon_39"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:background="#22323232"/>
        <RelativeLayout android:id="@+id/rl_sheikejian_xie"
            android:layout_width="match_parent"
            android:layout_height="89px"
            android:paddingLeft="32px"
            android:paddingRight="32px">
            <ImageView android:id="@+id/iv_gr_dindan"
                android:layout_width="35px"
                android:layout_height="36px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_121"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67px"
                android:layout_marginLeft="34px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_gr_dindan">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="谁可以看"
                    android:layout_centerVertical="true"
                    android:textColor="@color/zilanmu_textcolor"
                    android:textSize="28px"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:src="@mipmap/icon_58"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#09323232"/>



</LinearLayout>