        android:background="@color/color_line" android:layout_marginTop="@dimen/dp_10" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10"

        />
    <TextView
        android:id="@+id/txtCommentAll"
        android:text="@string/txt_comment_all"
        style="@style/normalSizeBlackStyle"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_15"
