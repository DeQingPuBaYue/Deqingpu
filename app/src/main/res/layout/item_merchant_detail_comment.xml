    android:background="@color/white"
    android:showDividers="beginning|middle|end" android:divider="@color/color_line"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtShowCommentSlide"
            android:text="@string/app_name"
            style="@style/normalSizeBlackStyle"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtFavorableRate"
            android:text="@string/app_name"
            style="@style/normalSizeBlackStyle"
            android:gravity="right"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/item_scroll_list" />
