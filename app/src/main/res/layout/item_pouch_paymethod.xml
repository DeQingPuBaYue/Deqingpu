<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="@color/color_line"
    android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/linBindAlipay"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/boder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/txt_alipay"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_alipay"
                android:drawablePadding="@dimen/dp_8"
                style="@style/BaseFont"
                android:padding="@dimen/dp_15"/>
            <TextView
                android:id="@+id/txtPouchAlipayUnBindTip"
                android:text="@string/txt_unbind"
                android:drawableRight="@mipmap/icon_jump_light"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                style="@style/BaseFont" />
            <ImageView
                android:id="@+id/ivPouchSelectAlipay"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linBindWeChat"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/boder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/txt_wechat"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_bind_wechat"
                android:drawablePadding="@dimen/dp_8"
                style="@style/BaseFont"
                android:padding="@dimen/dp_15"/>
            <TextView
                android:id="@+id/txtPouchWeChatUnBindTip"
                android:text="@string/txt_unbind"
                android:drawableRight="@mipmap/icon_jump_light"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                style="@style/BaseFont" />
            <ImageView
                android:id="@+id/ivPouchSelectWeChat"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>