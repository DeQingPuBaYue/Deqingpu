<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_ziying_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4px"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="67px"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="19px">
                    <ImageView android:id="@+id/iv_ziyingquan_cart"
                        android:layout_width="37px"
                        android:layout_height="37px"
                        android:src="@drawable/icon_38"
                        android:layout_centerVertical="true"/>
                    <TextView android:id="@+id/tv_name_cartitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_ziyingquan_cart"
                        android:text="zoo coffee"
                        android:textSize="22px"
                        android:textColor="@color/black"
                        android:layout_marginLeft="14px"/>
                    <TextView android:id="@+id/tv_ziyingbianji_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="编辑"
                        android:gravity="center"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rlv_in_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>