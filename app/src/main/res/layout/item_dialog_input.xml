<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="@dimen/dp_20">
    <EditText
        android:id="@+id/edtBindAlipay"
        android:background="@drawable/bg_round_white_stroke"
        android:hint="@string/hint_alipay_acount"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtBindWeChat"
        android:background="@drawable/bg_round_white_stroke"
        android:hint="@string/app_name"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>